{
    "copy4ai.exclude": {
        "paths": [
            ".vscode/**",
            ".__pycache__/**"
        ],
        "patterns": [
            "node_modules",
            "*.log",
            "*.tsv",
            "*.toml"
        ],
        "useGitignore": true
    },
    "isGitignoreExtActive": true,
    // --- General Python Analysis Settings ---
    // "workspace" ensures Pylance scans all files in the project, not just open ones
    "python.analysis.diagnosticMode": "workspace",
    // "basic" provides a strong baseline. "strict" is also available for maximum rigor
    // "python.analysis.typeCheckingMode": "basic",
    // Enable indexing for third-party libraries and project files
    "python.analysis.indexing": true,
    // --- Specific Rule Overrides (The "Comprehensive" List) ---
    "python.analysis.diagnosticSeverityOverrides": {
        // 1. Core Logic & Variables (Catch non-existent functions/classes)
        "reportUndefinedVariable": "error", // Red flag for non-existent functions or variables
        // "reportAttributeAccessIssue": "error", // Red flag for calling methods that don't exist on an object
        "reportCallIssue": "error", // Red flag for calling functions with wrong arguments
        "reportGeneralTypeIssues": "error", // Catch type mismatches (e.g., passing string to int)
        "reportOptionalMemberAccess": "warning", // Warn when accessing attributes on a value that might be None
        // 2. Imports & Cleanliness
        // "reportUnusedImport": "warning", // Highlights unused imports as errors
        "reportMissingImports": "error", // Red flag if a module is not installed or not found
        "reportDuplicateImport": "error", // Error if you import the same thing twice
        // "reportUnusedVariable": "warning", // Fade out variables that are defined but never used
        // 3. Project Structure & Quality
        "reportImportCycles": "warning", // Warns about circular dependencies
        "reportUnusedClass": "warning", // Warns if a class is defined but never used
        "reportUnusedFunction": "warning", // Warns if a function is defined but never used
        "reportShadowedVariable": "warning" // Warns if a local variable hides a variable from a higher scope
    },
    // --- VS Code UI & Automation ---
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        // Pylance can handle basic import organization
        "source.organizeImports": "explicit"
    }
}